# Flutter scriptini yükle
load File.join(File.dirname(__FILE__), 'Flutter', 'podhelper.rb')

platform :ios, '13.0'

# Proje dosyasını açıkça belirtiyoruz (Codemagic hatasını önlemek için)
project 'Runner'

target 'Runner' do
  use_frameworks!
  
  # Flutter paketlerini (ar_flutter_plugin, camera vb.) zorla yükle
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))

  post_install do |installer|
    installer.pods_project.targets.each do |target|
      flutter_additional_ios_build_settings(target)
      
      target.build_configurations.each do |config|
        # İmzalamayı manuel ve opsiyonel yap (Sideloading için kritik)
        config.build_settings['EXPANDED_CODE_SIGN_STYLE'] = 'Manual'
        config.build_settings['CODE_SIGNING_REQUIRED'] = 'NO'
        config.build_settings['CODE_SIGNING_ALLOWED'] = 'NO'
        
        # AR ve Kamera İzinleri
        config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] ||= [
          '$(inherited)',
          'PERMISSION_CAMERA=1',
          'PERMISSION_MICROPHONE=1',
          'PERMISSION_PHOTOS=1',
        ]
      end
    end
  end
end